{
  "name": "@starpeace/starpeace-server-multiverse-nodejs",
  "version": "0.1.7",
  "description": "STARPEACE Multiverse game-play and simulation server created with NodeJS",
  "author": "starpeace-project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/starpeace-project/starpeace-server-multiverse-nodejs.git"
  },
  "type": "module",
  "pkg": {
    "scripts": [
      "dist/**/*.js",
      "node_modules/@starpeace/starpeace-assets/assets/**/*.json"
    ],
    "assets": [
      "node_modules/@starpeace/starpeace-assets/assets/**/*.bmp"
    ]
  },
  "scripts": {
    "lines-of-code": "cloc ./src",
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && vitest --run --dir tst",
    "pkg-bundle": "npm run build && rollup -c server-rollup.config.js",
    "pkg-win-x64": "npm run pkg-bundle && pkg dist/bin/server-bundle.js -t node18-win-x64 -c package.json -o dist/bin/windows/server-x64.exe"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
