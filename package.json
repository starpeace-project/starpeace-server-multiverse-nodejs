    "@tsconfig/node16": "^16.1.1",
    "@types/bad-words": "^3.0.3",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/luxon": "^3.4.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.19",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/seedrandom": "^3.0.8",
    "@types/sharp": "^0.31.1",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.8",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "dependencies": {
    "@starpeace/starpeace-assets": "github:starpeace-project/starpeace-assets.git#v0.3.11",
    "@starpeace/starpeace-assets-types": "github:starpeace-project/starpeace-assets-types.git#v0.4.7",
    "bad-words": "^3.0.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "fflate": "^0.8.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.14",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "memorystore": "^1.6.7",
    "p-queue": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pkg": "^5.8.1",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "tasktimer": "^3.0.0",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zeromq": "^6.0.0-beta.19"
